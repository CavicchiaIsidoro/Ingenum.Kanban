@model Ingenum.Kanban.Web.Models.TaskViewModel

@{
    ViewData["Title"] = $"Créer une tache pour {ViewBag.Board.BoardName}";
}

<h1>@ViewData["Title"]</h1>

<h4>TaskViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskId" class="control-label" hidden="hidden"></label>
                <input asp-for="TaskId" class="form-control"  type="hidden"/>
                <span asp-validation-for="TaskId" class="text-danger" hidden="hidden"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intitule" class="control-label"></label>
                <input asp-for="Intitule" class="form-control" />
                <span asp-validation-for="Intitule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <input asp-for="Section" class="form-control" readonly="readonly" />
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoardId" class="control-label" hidden="hidden"></label>
                <input asp-for="BoardId" class="form-control" type="hidden"/>
                <span asp-validation-for="BoardId" class="text-danger" hidden="hidden"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
